@*@model MoviesRL.ViewModels.RandomMovieViewModel*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_NavBar") @*mozemo proslijediti i model u ovaj partial view kao drugi argument;
    Model koji se proslijedi u ovaj layout, direktno ce se (bez eksplicitnog navodjenja) proslijediti i u partial view _NavBar,
    ali ako _NavBar ocekuje npr. Movie a ne citav RandomMovieViewModel, onda prosljedjujemo kao  @Html.Partial("_NavBar", Model.Movie)*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MoviesRL</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
